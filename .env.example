# Application
APP_NAME=nucleus
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5433
DB_USER=nucleus
DB_PASSWORD=nucleus123
DB_NAME=nucleus_db
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=nucleus
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_VHOST=/

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_GROUP_ID=nucleus-consumer-group
KAFKA_CLIENT_ID=nucleus-producer

# Keycloak
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=nucleus
KEYCLOAK_CLIENT_ID=nucleus-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Monitoring
PROMETHEUS_NAMESPACE=nucleus
LOG_LEVEL=info
LOG_FORMAT=json

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# JWT
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10